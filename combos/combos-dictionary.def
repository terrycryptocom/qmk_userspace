/**
 * Combos for words or phrases should all require three or more keys.
 * Two alpha combos are avoided on purpose to minimize unintentional combo triggers while typing fast,
 * with the exception of combos with Z, X or symbols.
 */

// apostrophy combos
    SUBS(APOS_M,            "'m"                                    TY_SCLN,    TY_M)
    SUBS(APOS_RE,           "'re"                                   TY_SCLN,    TY_R,       TY_E)
    SUBS(APOS_R,            "'re"                                   TY_SCLN,    TY_R)
    SUBS(APOS_S,            "'s"                                    TY_SCLN,    TY_S)
    SUBS(APOS_N,            "n't"                                   TY_SCLN,    TY_N)
    SUBS(APOS_NT,           "n't"                                   TY_SCLN,    TY_N,       TY_T)
    SUBS(APOS_T,            "'t"                                    TY_SCLN,    TY_T)

// common endings
    SUBS(_EMNT,             "ment",                                 TY_E,       TY_M,       TY_N,       TY_T)
    SUBS(_INO,              "ion",                                  TY_I,       TY_N,       TY_O)
    SUBS(_INOT,             "tion",                                 TY_I,       TY_N,       TY_O,       TY_T)
    SUBS(_INOS,             "sion",                                 TY_I,       TY_N,       TY_O,       TY_S)

